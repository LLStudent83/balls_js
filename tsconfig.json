{
	"compilerOptions": {
		"types": ["vite/client"],
		"strict": true,
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es2022",
		"target": "es2022",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "bundler",
		"checkJs": false,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"paths": {
			"@shadcn/*": ["./shared/ui/shadcn/*"]
		}
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src/**/*"]
}
