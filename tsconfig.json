{
	"compilerOptions": {
		"strict": true,
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es2020",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "bundler",
		"checkJs": false,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["./shared/ui/shadcn/*"]
		},
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": { "namedExports": false }
			}
		]
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src/**/*"]
}
